<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textMetodoReservacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Método de Reservación: Agencia NicTravel"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/baseline_apartment_24"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/textNombre_Clientes3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Cliente: Itachi"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/textNumMes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número del Mes: 5"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/textPrecioNoche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio por Noche: 650"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/baseline_attach_money_24"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/textPrecioPaquete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio por Paquete: 460"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/baseline_attach_money_24"
            android:drawablePadding="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
